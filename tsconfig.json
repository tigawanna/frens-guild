{
  "compilerOptions": {
    "outDir": "dist",
    "sourceMap": true,
    "target": "esnext",
    "module": "commonjs",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "noImplicitAny": true,
    "strict": true,
    "skipLibCheck": true,
    "paths": {
      "@/*": ["./src/*"],
      "@db/*": ["./prisma/*"]
    },
  },
  "include": [
    "./*.js",
    "src/**/*.ts",
    "api/**/*.ts",
    "prisma/**/*.ts",
    "test/**/*.ts",
  ],
}
